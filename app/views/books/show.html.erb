<h2><%= @book.title %></h2>
<h4><%= @book.author %></h4>
<h5>Category: <%= @book.category.name %></h5>
<p><%= @book.description %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>

  <% if @book.user_id == current_user.id %>

  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you Sure you want to delete this?" } %>

  <% end %> 
<% end %>