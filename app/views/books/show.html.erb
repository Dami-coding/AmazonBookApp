<div class="row">
<div class="col-md-4 col-sm-6">
   <%= image_tag @book.book_img.url(:book_show), class: "boo k-show" %>
   </div>
   <div class="col-md-8">
   <h2><%= @book.title %></h2>
  <h4><%= @book.author %></h4>
  <h5>Category: <%= @book.category.name %></h5>
  <p><%= @book.description %></p>
  </div>


<div class="row">
  <div class="col-md-4">
    <!-- All Reviews -->


  </div>
</div>


  <span class="label label-info user-button"><%= link_to "Back", root_path %></span>

<% if user_signed_in? %>

 <% if @book.user_id == current_user.id %>
  <span class="label label-success"><%= link_to "Edit", edit_book_path(@book) %></span>

  <span class="label label-danger"><%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you Sure you want to delete this?" } %></span>

  <% end %> 
<% end %>
</div> 
